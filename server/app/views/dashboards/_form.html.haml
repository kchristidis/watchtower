- readonly ||= false
= render 'shared/errors', model: @dashboard
= form_for @dashboard, class: 'form-horizontal' do |f|
  .form-group.input-group
    %span.input-group-addon
      = fa_icon 'user'
    = f.text_field :user_id,
      placeholder: "user_id",
      class: 'form-control',
      readonly: true
  .form-group.input-group
    %span.input-group-addon
      = fa_icon 'line-chart'
    = f.text_field :name,
      placeholder: "name",
      class: 'form-control',
      readonly: readonly
  - unless readonly
    .actions
      = link_back class: 'btn btn-default' do
        = fa_icon 'arrow-left', text: 'Back'
      = f.button :submit, class: 'btn btn-default' do
        = fa_icon 'save', text: 'Save'
