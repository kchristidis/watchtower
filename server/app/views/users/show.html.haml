.col-md-6.col-sm-6
  = render 'dashboards'
.col-md-6.col-sm-6
  = render template: 'sensor_modules/index'
.col-md-12.pad20
.col-md-12.col-sm-12
  = legend "#{@user.username}'s Account"
  = render 'form', readonly: true
  = link_to edit_user_path(@user), class: 'btn btn-default' do
    = fa_icon 'pencil', text: 'Edit'
.col-md-12.pad20
.col-md-12
  = render 'data_points',
    data_points: DataPoint.where(sensor_id: @user.all_sensor_ids).order(timestamp: :desc).limit(50)
